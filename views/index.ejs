      display: flex;
      align-items: center;
    }

    .topbar .logo img {
      height: 30px;
      margin-right: 10px;
    }

    .index-container {
      text-align: center;
      padding: 20px;
      max-width: 720px;
      margin-top: 80px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      flex-grow: 1;
    }

    h1 {
      font-size: clamp(1.8rem, 4vw, 2.5rem);
      color: #00796b;
      margin-bottom: 12px;
    }

    p {
      font-size: clamp(1.1rem, 2.5vw, 1.4rem);
      color: #00796b;
      font-weight: 500;
      margin-bottom: 30px;
    }

    .icon {
      width: 100px;
      margin: 16px 0;
    }

    .cta-button {
      padding: 12px 24px;
      font-size: 1.05rem;
      background-color: #26a69a;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: background-color 0.3s ease;
      text-decoration: none;
      min-width: 180px;
      font-weight: 500;
    }

    .cta-button:hover {
      background-color: #00796b;
    }
  </style>
</head>
