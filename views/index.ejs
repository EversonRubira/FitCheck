  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(135deg, rgba(224, 247, 250, 0.7), rgba(241, 248, 233, 0.7)),
                  url('/img/bg-relaxante.jpg') no-repeat center center fixed;
      background-size: cover;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      align-items: center;
    }

    .topbar {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
